  author = {Martins, J. H. C. and Santos, N. C. and Figueira, P. and Faria, J. P. and Montalto, M. and Boisse, I. and Ehrenreich, D. and Lovis, C. and Mayor, M. and Melo, C. and Pepe, F. and Sousa, S. G. and Udry, S. and Cunha, D.},
