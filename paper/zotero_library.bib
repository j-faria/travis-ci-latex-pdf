  year = {2014},
  keywords = {Détection d'exoplanètes,Exoplanètes,Exoplanets,Exoplanets detection,Extrasolar planets,Gravitational Microlensing,Microlentilles gravitationnelles,Planète extrasolaire,Planètes extrasolaires}
