  journal = {arXiv:1504.05942 [astro-ph]},
  author = {Evans, Thomas M. and Aigrain, Suzanne and Gibson, Neale and Barstow, Joanna K. and Amundsen, David S. and Tremblin, Pascal and Mourier, Pierre},
  month = apr,
