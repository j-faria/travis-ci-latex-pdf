  keywords = {Astrophysics - Astrophysics of Galaxies,Astrophysics - Solar and Stellar Astrophysics,Stars: binaries: eclipsing,stars: binaries: spectroscopic,Stars: evolution,stars: fundamental parameters,Stars: interiors},
